<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FunctionalPage.Main_News_ContentActivity">
    <Toolbar
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="50dp"
        android:layout_gravity="left">

        <Button
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/baxk_">
        </Button>

    </Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50sp">
        <TextView
            android:layout_width="wrap_content"
            android:text="title"
            android:textStyle="italic"
            android:id="@+id/title"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="content"
            android:id="@+id/content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="90dp">
            <Button
                android:layout_width="wrap_content"
                android:text="comment_num"
                android:id="@+id/btn_comments"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:id="@+id/comment_detail"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="comment_detail"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="like_num"
                android:id="@+id/btn_like"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/like_detail"
                android:text="likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="star_num"
                android:id="@+id/btn_star"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="star_detail"
                android:id="@+id/star_detail"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="share"
                android:id="@+id/btn_share"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="18sp"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>