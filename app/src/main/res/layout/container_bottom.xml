<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="70dp"
    android:orientation="horizontal"
    tools:context=".Fragment.ContainerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_NewsPage"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_home_page"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="match_parent"
            android:text="首页"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_MyOwnPage"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_personal_center"
            android:layout_weight="0.7"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="个人中心"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout_CommitPage"
        android:layout_weight="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_share"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="个人分享"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>
    </LinearLayout>
</LinearLayout>